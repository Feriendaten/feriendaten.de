<div class="grid gap-4 md:grid-cols-3">
  <div class="col-span-3">
    <h1 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
      <%= if assigns[:h1_title] do %>
        <%= @h1_title %>
      <% else %>
        <%= @vacation_colloquial %> <%= @location.name %>
      <% end %>
    </h1>
    <p class="mt-2 text-sm text-gray-700 dark:text-gray-100">
      <%= if assigns[:year] do %>
        Wann sind <%= @vacation_colloquial %> in <%= @location.name %> im Jahr <%= @year %>?
        Hier findest du den Ferientermin:
      <% else %>
        Wann sind die nÃ¤chsten <%= @vacation_colloquial %> in <%= @location.name %>?
        Eine Ãœbersicht der Ferientermine:
      <% end %>
    </p>
  </div>
  <% file_name = "#{String.downcase(@vacation_colloquial)}-#{@location.slug}-#{@year}.jpeg" %>

  <div class={
    if File.exists?(
         "#{Application.app_dir(:feriendaten)}/priv/static/images/notepad/osterferien/#{file_name}"
       ),
       do: "col-span-3 md:col-span-2",
       else: "col-span-3"
  }>
    <.vacations_table_table_only entries={@entries} />
  </div>

  <%= if File.exists?("#{Application.app_dir(:feriendaten)}/priv/static/images/notepad/osterferien/#{file_name}") do %>
    <div class="col-span-3 md:col-span-1">
      <img
        src={"/images/notepad/osterferien/" <> file_name}
        alt={"#{@vacation_colloquial} #{@location.name} #{@year}: #{Feriendaten.Calendars.all_ferientermine_to_string(@entries)}"}
        class="h-auto max-w-full rounded-lg"
      />
    </div>
  <% end %>

  <div class="col-span-3">
    <%= if assigns[:year] && length(@entries) > 0 do %>
      <.vacation_location_year_faq
        entries={@entries}
        location={@location}
        year={@year}
        requested_date={@requested_date}
      />
    <% end %>
  </div>
</div>
